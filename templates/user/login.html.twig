{% extends 'boilerplate.html.twig' %}

{% block content %}
  <form class="signin" action="{{ url('login') }}" method="POST">
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="email" id="inputEmail" class="form-control signin__email mb-2" placeholder="Email address" required autofocus>

    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" id="inputPassword" class="form-control mb-2 signin__password" placeholder="Password" required>

    <div class="signin__checkbox mb-2 hidden">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>

    <button class="btn btn-primary btn-block" type="submit">Sign in</button>
    <a href="{{ url('register') }}" class="btn btn-outline-primary btn-block">Register</a>
  </form>
{% endblock %}

{% block page_title %}Sign In{% endblock %}
{% block body_class %}text-center login-page{% endblock %}
