{% extends 'boilerplate.html.twig' %}

{% block content %}
  {{ form_start(form, { 'attr': {'class': 'signin'} }) }}
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

    {% if error %}
      <p class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
    {% endif %}

    {{ form_row(form._username,  { 'attr': { 'placeholder': 'Email Address' } }) }}

    {{ form_row(form._password,  { 'attr': { 'placeholder': 'Password' } }) }}

    <div class="signin__checkbox mb-2 hidden">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>

    <button class="btn btn-primary btn-block mb-2" type="submit">Sign in</button>

    <input type="hidden" name="_target_path" value="{{ url('message') }}" />

    <a href="{{ url('register') }}" class="btn btn-outline-primary btn-block">Register</a>
  {{ form_end(form) }}
{% endblock %}

{% block page_title %}Sign In{% endblock %}
{% block body_class %}text-center login-page{% endblock %}
