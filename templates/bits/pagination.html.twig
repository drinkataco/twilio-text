<nav aria-label="{{ nav_title }}">
  <ul class="pagination">

    <!-- Previous -->
    <li class="page-item{% if page_number == 1%} disabled{% endif %}">
      <a class="page-link" href="#" aria-label="Previous" disabled>
        <span aria-hidden="true">&laquo;</span>
        <span class="sr-only">Previous</span>
      </a>
    </li>

    <!-- Show some before -->
    {% if page_number > 1 %}
      {% for i in 3..1 if page_number - i > 0 %}
        {% set number = page_number - i %}
        <li class="page-item"><a class="page-link" href="#">{{ number }}</a></li>
      {% endfor %}
    {% endif %}

    <!-- Show current -->
    <li class="page-item active"><a class="page-link" href="#">{{ page_number }}</a></li>

    <!-- Show some after -->
    {% if page_number < total_pages %}
      {% for i in 1..3 if i <= total_pages %}
        {% set number = page_number + i %}
        <li class="page-item"><a class="page-link" href="#">{{ number }}</a></li>
      {% endfor %}
    {% endif %}

    <!-- Next -->
    <li class="page-item{% if page_number == total_pages%} disabled{% endif %}">
      <a class="page-link" href="#" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
        <span class="sr-only">Next</span>
      </a>
    </li>

  </ul>
</nav>
