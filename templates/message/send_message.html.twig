{% extends 'boilerplate.html.twig' %}

{% block content %}
  <div class="container">
    <div class="row mb-5">
      <div class="col">
        <div class="message-form mb-5">
          {{ form_start(form) }}
            <h1 class="h3 mb-3 font-weight-normal">Send a Text</h1>

            {% for label, flashes in app.session.flashbag.all %}
              {% for flash in flashes %}
                  <div class="alert alert-{{ label }}" role="alert">
                      {{ flash }}
                  </div>
              {% endfor %}
            {% endfor %}

            {{ form_row(form.recipient,   { 'attr': { 'placeholder': 'Mobile Number' } }) }}
            {{ form_row(form.messageBody, { 'attr': { 'placeholder': 'Message' } }) }}

            <ul class="float-left list-inline text-form__options">
              {% spaceless %}
              <li class="list-inline-item"><a href="{{ url('logout') }}">Logout</a></li>
              {% endspaceless %}
            </ul>
            <button class="btn btn-primary float-right" type="submit">Send</button>
          {{ form_end(form) }}
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <div class="messages">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Sent Date</th>
                <th scope="col">Recepient</th>
                <th scope="col">Message Body</th>
                <th scope="col">Status</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">1</th>
                <td>Mark</td>
                <td>Otto</td>
                <td>@mdo</td>
                <td>@mdo</td>
              </tr>
              <tr>
                <th scope="row">2</th>
                <td>Jacob</td>
                <td>Thornton</td>
                <td>@fat</td>
                <td>@fat</td>
              </tr>
              <tr>
                <th scope="row">3</th>
                <td>Larry</td>
                <td>the Bird</td>
                <td>@twitter</td>
                <td>@twitter</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block page_title %}Send a Text{% endblock %}
{% block body_class %}message-page{% endblock %}
